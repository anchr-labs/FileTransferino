<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Nord Theme -->
    
    <Color x:Key="BackgroundColor">#2E3440</Color>
    <Color x:Key="SurfaceColor">#3B4252</Color>
    <Color x:Key="TextPrimaryColor">#ECEFF4</Color>
    <Color x:Key="TextSecondaryColor">#D8DEE9</Color>
    <Color x:Key="BorderColor">#4C566A</Color>
    <Color x:Key="AccentColor">#88C0D0</Color>
    <Color x:Key="AccentHoverColor">#8FBCBB</Color>
    <Color x:Key="ErrorColor">#BF616A</Color>
    <Color x:Key="SuccessColor">#A3BE8C</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#2E3440" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#3B4252" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#ECEFF4" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#D8DEE9" />
    <SolidColorBrush x:Key="BorderBrush" Color="#4C566A" />
    <SolidColorBrush x:Key="AccentBrush" Color="#88C0D0" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#8FBCBB" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#BF616A" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#A3BE8C" />
    
</ResourceDictionary>
