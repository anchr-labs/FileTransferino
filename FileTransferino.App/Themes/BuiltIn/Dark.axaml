<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme -->
    
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#2D2D2D</Color>
    <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
    <Color x:Key="TextSecondaryColor">#A0A0A0</Color>
    <Color x:Key="BorderColor">#3F3F3F</Color>
    <Color x:Key="AccentColor">#3794FF</Color>
    <Color x:Key="AccentHoverColor">#5BA3FF</Color>
    <Color x:Key="ErrorColor">#F48771</Color>
    <Color x:Key="SuccessColor">#89D185</Color>
    <Color x:Key="InputBackgroundColor">#1E1E1E</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D2D" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0A0A0" />
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F3F" />
    <SolidColorBrush x:Key="AccentBrush" Color="#3794FF" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#5BA3FF" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F48771" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#89D185" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="LabelBrush" Color="#D0D0D0" />
    
    <!-- Fluent Theme Overrides for ListBox selection colors -->
    <Color x:Key="SystemAccentColor">#3794FF</Color>
    <Color x:Key="SystemAccentColorDark1">#3794FF</Color>
    <Color x:Key="SystemAccentColorDark2">#3794FF</Color>
    <Color x:Key="SystemAccentColorDark3">#3794FF</Color>
    <Color x:Key="SystemAccentColorLight1">#5BA3FF</Color>
    <Color x:Key="SystemAccentColorLight2">#5BA3FF</Color>
    <Color x:Key="SystemAccentColorLight3">#5BA3FF</Color>
    
</ResourceDictionary>
