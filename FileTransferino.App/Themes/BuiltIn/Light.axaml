<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme (Default) -->
    
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F5F5F5</Color>
    <Color x:Key="TextPrimaryColor">#1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    <Color x:Key="BorderColor">#D1D1D1</Color>
    <Color x:Key="AccentColor">#0078D4</Color>
    <Color x:Key="AccentHoverColor">#005A9E</Color>
    <Color x:Key="ErrorColor">#D13438</Color>
    <Color x:Key="SuccessColor">#107C10</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A1A" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666" />
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D1D1" />
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#005A9E" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10" />
    <SolidColorBrush x:Key="LabelBrush" Color="#1A1A1A" />
    
</ResourceDictionary>
