<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileTransferino.App.MainWindow"
        Title="FileTransferino"
        Width="900"
        Height="600"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="30"
        SystemDecorations="None">
    
    <!-- Main border that wraps everything -->
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="#000000" Opacity="0.3" OffsetX="0" OffsetY="4"/>
        </Border.Effect>
        <DockPanel>
            <!-- Custom Title Bar -->
            <Border DockPanel.Dock="Top" 
                    Height="30" 
                    Background="{DynamicResource SurfaceBrush}"
                    x:Name="TitleBar"
                    PointerPressed="OnTitleBarPointerPressed">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Icon and Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <TextBlock Text="FileTransferino" 
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal"
                                Spacing="0">
                        <Button Content="âˆ’" 
                                Click="MinimizeWindow" 
                                Width="45" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                FontSize="16"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="0">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
                                </Style>
                            </Button.Styles>
                        </Button>
                        <Button Content="â–¡" 
                                Click="MaximizeWindow" 
                                Width="45" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                FontSize="14"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="0">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
                                </Style>
                            </Button.Styles>
                        </Button>
                        <Button Content="âœ•" 
                                Click="CloseWindow" 
                                Width="45" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                FontSize="14"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="0">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#C42B1C" />
                                </Style>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Margin="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                    <TextBlock Text="Welcome to FileTransferino!"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    
                    <TextBlock Text="Press Ctrl+K to open the command palette"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            MaxWidth="500">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Available Commands:"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            
                            <TextBlock Text="â€¢ Ctrl+K - Open Command Palette"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            
                            <TextBlock Text="â€¢ Search 'Light' to apply Light theme"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            
                            <TextBlock Text="â€¢ Search 'Dark' to apply Dark theme"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            
                            <TextBlock Text="â€¢ Search 'Ocean' to apply Ocean theme"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            
                            <TextBlock Text="â€¢ Search 'Nord' to apply Nord theme"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            
                            <TextBlock Text="â€¢ Search 'Monokai' to apply Monokai theme"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>
