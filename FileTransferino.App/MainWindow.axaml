<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileTransferino.App.MainWindow"
        Title="FileTransferino"
        Width="900"
        Height="600"
        Background="{DynamicResource BackgroundBrush}">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Text="Welcome to FileTransferino!"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
            
            <TextBlock Text="Press Ctrl+K to open the command palette"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextSecondaryBrush}" />
            
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    MaxWidth="500">
                <StackPanel Spacing="12">
                    <TextBlock Text="Available Commands:"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    
                    <TextBlock Text="• Ctrl+K - Open Command Palette"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <TextBlock Text="• Search 'Light' to apply Light theme"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <TextBlock Text="• Search 'Dark' to apply Dark theme"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <TextBlock Text="• Search 'Ocean' to apply Ocean theme"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <TextBlock Text="• Search 'Nord' to apply Nord theme"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    
                    <TextBlock Text="• Search 'Monokai' to apply Monokai theme"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
