<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileTransferino.App.ViewModels"
        x:Class="FileTransferino.App.Views.SiteManagerWindow"
        x:DataType="vm:SiteManagerViewModel"
        Title="Site Manager"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30">

    <Window.Styles>
        <!-- Fixed color scheme for Site Manager - not affected by theme changes -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
            <Setter Property="CaretBrush" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
        </Style>
        
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#37373D" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="#3F3F46" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#555555" />
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#505055" />
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
        </Style>
        
        <Style Selector="TextBlock.secondary">
            <Setter Property="Foreground" Value="#A0A0A0" />
        </Style>
    </Window.Styles>

    <Grid Margin="20" RowDefinitions="*,Auto">
        <!-- Main Content -->
        <Grid Grid.Row="0" ColumnDefinitions="250,*">
            <!-- Left: Site List -->
            <Border Grid.Column="0" 
                    Classes="card"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="0"
                    Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Saved Sites"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="12,12,12,8" />
                    
                    <ListBox ItemsSource="{Binding Sites}"
                             SelectedItem="{Binding SelectedSite}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Spacing="2" Margin="4">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Medium" />
                                    <TextBlock FontSize="11"
                                               Classes="secondary">
                                        <Run Text="{Binding Protocol}" />
                                        <Run Text="://" />
                                        <Run Text="{Binding Host}" />
                                        <Run Text=":" />
                                        <Run Text="{Binding Port}" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right: Site Details Form -->
            <Border Grid.Column="1"
                    Classes="card"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="Site Configuration"
                                   FontWeight="SemiBold"
                                   FontSize="16" />

                        <!-- Name -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Site Name *"
                                       Classes="secondary" />
                            <TextBox Text="{Binding Name}" 
                                     Watermark="My FTP Server" />
                        </StackPanel>

                        <!-- Protocol -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Protocol *"
                                       Classes="secondary" />
                            <ComboBox SelectedItem="{Binding Protocol}"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="FTP" />
                                <ComboBoxItem Content="FTPS" />
                                <ComboBoxItem Content="SFTP" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Host -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Host *"
                                       Classes="secondary" />
                            <TextBox Text="{Binding Host}"
                                     Watermark="ftp.example.com" />
                        </StackPanel>

                        <!-- Port -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Port *"
                                       Classes="secondary" />
                            <NumericUpDown Value="{Binding Port}"
                                          Minimum="1"
                                          Maximum="65535"
                                          Increment="1"
                                          FormatString="0" />
                        </StackPanel>

                        <!-- Username -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Username"
                                       Classes="secondary" />
                            <TextBox Text="{Binding Username}"
                                     Watermark="username" />
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Password"
                                       Classes="secondary" />
                            <TextBox Text="{Binding Password}"
                                     Watermark="Leave empty to keep existing"
                                     PasswordChar="•" />
                            <TextBlock Text="Tip: Leave empty to keep current password when editing"
                                       FontSize="11"
                                       FontStyle="Italic"
                                       Classes="secondary" />
                        </StackPanel>

                        <!-- Default Remote Path -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Default Remote Path"
                                       Classes="secondary" />
                            <TextBox Text="{Binding DefaultRemotePath}"
                                     Watermark="/" />
                        </StackPanel>

                        <!-- Default Local Path -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Default Local Path"
                                       Classes="secondary" />
                            <TextBox Text="{Binding DefaultLocalPath}"
                                     Watermark="~/Downloads" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom: Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="New"
                    MinWidth="100"
                    x:Name="NewButton" />
            <Button Content="Save"
                    MinWidth="100"
                    x:Name="SaveButton" />
            <Button Content="Delete"
                    MinWidth="100"
                    x:Name="DeleteButton" />
            <Button Content="Close"
                    MinWidth="100"
                    x:Name="CloseButton" />
        </StackPanel>
    </Grid>
</Window>
